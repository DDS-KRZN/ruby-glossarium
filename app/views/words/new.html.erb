<h1>New Word in <%= @glossary.name %></h1>

<%= form_with model: [@glossary, @word] do |f| %>
  <div class="field">
    <%= f.label :word %>
    <%= f.text_field :word %>
  </div>

  <div class="field">
    <%= f.label :definition %>
    <%= f.text_area :definition %>
  </div>

  <div class="field">
    <%= f.label :categories %>
    <%= f.collection_check_boxes :category_ids, @categories, :id, :name %>
  </div>


  <div class="actions">
    <%= f.submit "Create" %>
  </div>
<% end %>

<%= link_to "Back", glossary_path(@glossary) %>