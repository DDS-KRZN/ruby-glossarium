<h1>Edit Word in <%= @word.glossary.name %></h1>

<%= form_with model: [@word.glossary, @word] do |f| %>
  <div class="field">
    <%= f.label :word %>
    <%= f.text_field :word %>
  </div>

  <div class="field">
    <%= f.label :definition %>
    <%= f.text_area :definition %>
  </div>

  <div class="field">
    <%= f.label :categories %>
    <%= f.collection_check_boxes :category_ids, @categories, :id, :name %>
  </div>

  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>

<%= link_to "Back", glossary_word_path(@word.glossary, @word) %>